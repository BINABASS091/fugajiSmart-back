# Database Configuration (updated for FugajiSmart project)
DB_NAME=fugajiSmart
DB_USER=kuku
DB_PASSWORD=123@kuku
DB_HOST=localhost
DB_PORT=5432

# Use this PostgreSQL connection string (overrides individual vars)
DATABASE_URL=postgresql://kuku:123%40kuku@localhost:5432/fugajiSmart

# Django Secret Key (generate a new one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
SECRET_KEY=your-secret-key-here

# Debug Settings
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=10080  # minutes (7 days)

# Email Settings (for password resets, etc.)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend  # For development

# Frontend URL (used for password reset links, etc.)
FRONTEND_URL=http://127.0.0.1:5173

# OpenAI Configuration - REQUIRED FOR FUGAJIBOT
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo